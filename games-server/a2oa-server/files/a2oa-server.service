[Unit]
Description=ArmA 2 OA - server
After=local-fs.target network.target

[Service]
LimitCORE=1000000
EnvironmentFile=/etc/conf.d/a2oa-server
Environment=LD_LIBRARY_PATH=/opt/a2oa-server/
#Environment=OTHERPARAMS="-ranking=ranking.log -cfg=basic.cfg -config=server.cfg -cpuCount=4 -maxMem=2047"
User=arma2
WorkingDirectory=/opt/a2oa-server
Restart=always
ExecStart=/opt/a2oa-server/arma2oaserver -server ${OTHERPARAMS}

[Install]
WantedBy=multi-user.target
